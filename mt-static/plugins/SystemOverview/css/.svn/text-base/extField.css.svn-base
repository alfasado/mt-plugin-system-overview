.ext-fields-header { 
    text-align:right;
}
.sort-handle
{
    cursor: move;
}
.ext-field-header .icon
{
    vertical-align: middle;
}
.ext-field-content .entry-date
{
    margin-right: 3px;
}
.ext-field-content-border
{
    padding: 8px;
    margin-top: 5px;
    border: 1px solid #C8C2BE;
    -moz-border-radius: 5px;
    -khtml-border-radius: 5px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
}
* html .ext-field-format
{
	margin-right: 8px;
}
*+html .ext-field-format
{
    margin-right: 4px;
}
.ext-field-format {
    text-align: right;
    padding: 8px;
    border-top: 1px solid #C8C2BE;
    border-right: 1px solid #C8C2BE;
    border-left: 1px solid #C8C2BE;
    background-color: #F3F3F3;
    -moz-border-radius-topright: 3px;
    -moz-border-radius-topleft: 3px;
    -khtml-border-top-right-radius: 3px;
    -khtml-border-top-left-radius: 3px;
    -webkit-border-top-right-radius: 3px;
    -webkit-border-top-left-radius: 3px;
    border-top-right-radius: 3px;
    border-top-left-radius: 3px;
}

.ext-field-textarea {
    height: 90px;
    border: 1px solid #C8C2BE;
    -moz-border-radius-topright: 0;
    -moz-border-radius-topleft: 0;
    -khtml-border-top-right-radius: 0;
    -khtml-border-top-left-radius: 0;
    -webkit-border-top-right-radius: 0;
    -webkit-border-top-left-radius: 0;
    border-top-right-radius: 0;
    border-top-left-radius: 0;
}
.ext-field-formatselect {
    font-size: 80%;
}
.ext-field-toggle-link {
    position: absolute;
    top: 8px;
    right: 10px;
    left: auto;
}

 
